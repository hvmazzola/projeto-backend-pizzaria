    "paths": {
        "usuario/findAll": {
            "get": {
                "summary": "Lista todos os usuários da API",
                "description": "Rota responsável pela listagem de usuários da API, com paginação, incluindo usuários administradores.",
                "tags": ["User"],
                "responses": {
                    "200": {
                        "description": "OK: Tarefa realizada com sucesso."
                    },
                    "401": {
                        "description": "UNAUTHORIZED: Erro de autenticação. Problemas com o token."
                    },
                    "404": {
                        "description": "NOT FOUND: Nenhum usuário encontrado."
                    },
                    "500": {
                        "description": "INTERNAL SERVER ERROR: Servidor captou um erro e não processou a solicitação."
                    }
                }
            }
        },
        "usuario/findById/:id":{
            "get": {
                "summary": "Lista um usuário a partir do seu ID",
                "description": "Rota responsável pela procura de um único usuário a partir do ID colocado como parâmetro na requisição.",
                "tags": ["User"],
                "responses": {
                    "200": {
                        "description": "OK: Tarefa realizada com sucesso."
                    },
                    "401": {
                        "description": "UNAUTHORIZED: Erro de autenticação. Problemas com o token."
                    },
                    "404": {
                        "description": "NOT FOUND: Usuário não encontrado."
                    },
                    "500": {
                        "description": "INTERNAL SERVER ERROR: Servidor captou um erro e não processou a solicitação."
                    }
                }
            }
        },
